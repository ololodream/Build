<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dip"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/CheckBox_itemPickExercise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            />

        <TextView
            android:id="@+id/textView_itemPickExercise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/CheckBox_itemPickExercise1"
            android:layout_toLeftOf="@+id/CheckBox_itemPickExercise1"
            android:layout_weight="1"
            android:text="Exercise Name:"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorGap" />

        <TextView
            android:id="@+id/textView_itemPickExercise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView_itemPickExercise1"
            android:layout_toLeftOf="@+id/textView_itemPickExercise1"
            android:layout_weight="1"
            android:text="Exercise Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorGap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_itemPickExercise3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_itemPickExercise1"
                android:layout_below="@+id/textView_itemPickExercise1"
                android:layout_weight="1"
                android:text="Sets: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorGap" />

            <EditText
                android:id="@+id/EditText_itemPickExercise4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_itemPickExercise2"
                android:layout_toEndOf="@+id/textView_itemPickExercise3"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="@color/colorGap"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_itemPickExercise5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_itemPickExercise2"
                android:layout_toEndOf="@+id/EditText_itemPickExercise4"
                android:layout_weight="1"
                android:text="Rpts: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorGap" />

            <EditText
                android:id="@+id/EditText_itemPickExercise6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_itemPickExercise2"
                android:layout_toEndOf="@+id/textView_itemPickExercise5"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="@color/colorGap"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>