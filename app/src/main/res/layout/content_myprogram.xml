<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="0.75"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProgramFragment"
    tools:showIn="@layout/fragment_program"
    android:background="@color/colorGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGap"
        >

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MY PROGRAM"
            android:textSize="12dp"
            android:background="@color/colorWhite"
            android:id="@+id/textViewProgram1"
            android:textColor="@color/colorLightGray"
            android:padding="16dp" />
        <TextView
            android:id="@+id/textview_margin1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/margin"
            android:layout_below="@+id/textViewProgram1"/>
        <ListView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/program_container1"
            android:layout_below="@+id/textview_margin1"
            android:dividerHeight="2.0dp"

            android:background="@color/colorWhite"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+New"
            android:textSize="12dp"

            android:id="@+id/program_button1"
            android:background="@android:color/transparent"
            android:textColor="@color/colorLightGray"
            android:layout_alignBaseline="@+id/textViewProgram1"
            android:layout_alignParentEnd="true"
             />

    </RelativeLayout>

</RelativeLayout>